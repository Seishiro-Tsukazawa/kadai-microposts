<ul class="list-unstyled">
  <% fav_microposts.each do |fav_micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(fav_micropost.user, { size: 50 }) %>" alt="">
      <div class= "media-body">
        <div>
          <%= link_to fav_micropost.user.name, user_path(fav_micropost.user) %><span class="text-muted">posted at <%= fav_micropost.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= fav_micropost.content %></p>
        </div>
        <div class="row">
          <div class="col-sm-2"></div>
          <div class="col-sm-2">
            <% if current_user == login_user %>
              <%= render 'favorites/like_button', micropost: fav_micropost %>
            <% end %>
          </div>
          <div class="col-sm-8"></div>
          
        </div>
      </div>
    </li>
  <% end %>
</ul>